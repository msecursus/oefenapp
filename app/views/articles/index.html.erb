<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr style="color:#fff; font-family:sans-serif;">
        <td style="background:black;"><%= article.user.username %></td>
        <td style="background:#937c7c;"><%= article.title %></td>
        <td style="background:#b59898; padding:10px;"><%= article.body %></td>
        <td style="background:#c4acac;"><%= link_to 'Show', article %></td>
        <td style="background:#dbb3b3;"><%= link_to 'Edit', edit_article_path(article) %></td>
        <td style="background:#bf3f3f;"><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

