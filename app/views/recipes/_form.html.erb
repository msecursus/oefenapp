<%= simple_form_for(@recipe) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %><br />
    <%= f.file_field :image %>
    <%= f.input :prepare %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
